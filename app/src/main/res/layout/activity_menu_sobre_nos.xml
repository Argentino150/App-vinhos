<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/branco"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Sobre a vinícola Salut"
        android:textAlignment="center"
        android:textColor="@color/vermelho"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <ImageView
        android:src="@drawable/logo1"
        android:layout_width="180dp"
        android:layout_height="180dp"/>



    <Button
        android:id="@+id/btnNossaHistoria"
        android:text="Nossa história"
        android:backgroundTint="@color/vermelho"
        android:textColor="@color/branco"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnMissao"
        android:text="Missão, visão e valores"
        android:backgroundTint="@color/vermelho"
        android:textColor="@color/branco"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnDiferencial"
        android:text="Nosso diferencial"
        android:backgroundTint="@color/vermelho"
        android:textColor="@color/branco"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnLocalizacao"
        android:text="Onde estamos localizados"
        android:backgroundTint="@color/vermelho"
        android:textColor="@color/branco"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Todo vinho conta uma história. Esta é a nossa."
        android:layout_marginTop="20dp"
        android:textColor="@color/cinzaText"
        android:textStyle="italic"/>

</LinearLayout>
