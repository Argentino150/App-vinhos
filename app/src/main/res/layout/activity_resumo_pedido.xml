<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Layout Horizontal para Título e Imagem na Toolbar -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">


    <!-- Título da Toolbar -->
        <TextView
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/resumo_pedido"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Imagem ao lado do título -->
        <ImageView
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/logo2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <!-- ScrollView com dados do pedido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lightGray"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_dados_cliente_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dados_cliente"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_dados_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente: João Martins\nTelefone: (99) 999999999\nEndereço: Rua das Flores, 148\nForma de pagamento: Dinheiro"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_lista_produtos_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lista_produtos"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_lista_produtos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Château De Sales | 1 un. | R$ 159,90\n2. Saint Martin | 2 un. | R$ 99,80\n\nTotal geral: R$ 259,70"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_status_pedido_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_pedido"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_status_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Em deslocamento para entrega"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Botões para salvar ou voltar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <android.widget.Button
            android:id="@+id/btn_salvar_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/salvar_pdf"
            style="@style/PrimaryButton"/>

        <android.widget.Button
            android:id="@+id/btn_pedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            style="@style/SecondaryButton"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>
