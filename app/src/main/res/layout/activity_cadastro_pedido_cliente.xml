<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Layout Horizontal para Título e Imagem -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Título da Toolbar -->
        <TextView
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/cadastrando_pedido"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Imagem ao lado do título -->
        <ImageView
            android:layout_width="208dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/logo2" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_cliente"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_cliente"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sobrenome"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_sobrenome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_sobrenome"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_representante"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_representante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_representante"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_telefone"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_telefone"
                android:inputType="phone"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_endereco"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_endereco"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_forma_pagamento"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <Spinner
                android:id="@+id/spinner_forma_pagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btn_salvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/salvar"
                style="@style/PrimaryButton"/>

            <Button
                android:id="@+id/btn_voltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/back"
                style="@style/SecondaryButton"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
