<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_banner"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/missao_banner" />

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="#800000"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missão, Visão e Valores"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

        <!-- Missão -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nossa Missão:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#800000"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_missao"
            android:textSize="16sp"
            android:textColor="#272727"
            android:background="#ECECEC"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"/>

        <!-- Visão -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nossa Visão:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#800000"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_visao"
            android:textSize="16sp"
            android:textColor="#272727"
            android:background="#ECECEC"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"/>

        </LinearLayout>

        <!-- Valores -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nossos Valores:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#800000"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_valores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salut: brindando histórias e momentos inesquecíveis."
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#800000"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desde 1998"
            android:textSize="14sp"
            android:textColor="#999999"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
