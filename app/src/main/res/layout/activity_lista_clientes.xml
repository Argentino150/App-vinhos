<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Barra de busca -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_busca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/buscar_cliente"
            android:padding="8dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo2"/>
    </LinearLayout>

    <!-- Botão adicionar cliente -->
    <android.widget.Button
        android:id="@+id/btn_adicionar_cliente"
        style="@style/ActionButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="8dp"
        android:text="@string/adicionar_cliente" />

    <!-- Lista de clientes -->
    <LinearLayout
        android:id="@+id/list_clientes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:divider="@color/lightGray"
        android:dividerHeight="1dp">

        <!-- Item de Cliente 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="8dp">

            <!-- Detalhes do Cliente -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_nome_cliente_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente X"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_endereco_cliente_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço: Rua Exemplo, 123"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Ações de editar e excluir -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_editar_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/editar"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/iv_excluir_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/excluir"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Adicionar mais itens de cliente aqui seguindo o mesmo padrão -->

    </LinearLayout>

</LinearLayout>
