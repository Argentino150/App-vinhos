<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Layout Horizontal para Imagem de Voltar, Título e Logo -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Imagem de Voltar -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back"
            android:layout_marginEnd="16dp"/>

        <!-- Título -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/metas_comissoes"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo2"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:src="@drawable/logo2" />
    </LinearLayout>

    <!-- Linha com as colunas Meta e Comissão -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/lightGray"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/meta"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/comissao"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Lista de Metas -->
    <ListView
        android:id="@+id/list_metas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
