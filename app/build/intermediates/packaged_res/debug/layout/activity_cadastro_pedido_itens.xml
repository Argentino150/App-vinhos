<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Layout Horizontal para Título e Imagem na Toolbar -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <!-- Título da Toolbar -->
        <TextView
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/cadastrando_pedido"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Imagem ao lado do título -->
        <ImageView
            android:layout_width="214dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/logo2" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_itens"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="8dp"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/salvar"
            style="@style/PrimaryButton"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_ver_resumo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ver_resumo_pedido"
            style="@style/PrimaryButton"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            style="@style/SecondaryButton"/>
    </LinearLayout>
</LinearLayout>
