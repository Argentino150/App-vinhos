<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Layout Horizontal para Título e Imagem -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="@string/cadastrando_vinho"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Imagem à direita do título -->
            <ImageView
                android:layout_width="214dp"
                android:layout_height="40dp"
                android:src="@drawable/logo2" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_nome"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nome"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_safra"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_safra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_safra"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_tipo"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <Spinner
            android:id="@+id/spinner_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_descricao"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_descricao"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:hint="@string/hint_descricao"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_valor"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_valor"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_adicionar_imagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adicionar_imagem"
            android:drawablePadding="8dp"
            style="@style/ActionButton"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/salvar"
            style="@style/PrimaryButton"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            style="@style/SecondaryButton" />

    </LinearLayout>
</ScrollView>
